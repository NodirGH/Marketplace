<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tvTitleColumnItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/font_sf_pro_bold"
        android:text="columnTitle"
        android:textColor="@color/black_333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all >"
        android:backgroundTint="#00FFFFFF"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="@id/tvTitleColumnItem"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleColumnItem"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textAllCaps="false"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/column_item_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleColumnItem" />
</androidx.constraintlayout.widget.ConstraintLayout>